<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15"
      style="-fx-padding: 20;"
      stylesheets="@/css/styles.css">

    <!-- Nagłówek z danymi ucznia -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Twoje oceny" styleClass="header"/>
        <Label fx:id="studentNameLabel" styleClass="student-name"/>
    </HBox>

    <!-- Tabela z ocenami -->
    <TableView fx:id="gradesTable" styleClass="grades-table">
        <columns>
            <TableColumn text="Przedmiot" fx:id="subjectColumn" styleClass="subject-column"/>
            <TableColumn text="Oceny" fx:id="gradesColumn" styleClass="grades-column"/>
            <TableColumn text="Średnia" fx:id="averageColumn" styleClass="average-column"/>
        </columns>
    </TableView>

    <!-- Panel statystyk -->
    <HBox spacing="30" alignment="CENTER">
        <VBox spacing="5" alignment="CENTER">
            <Label text="Średnia ogólna" styleClass="stat-label"/>
            <Label fx:id="overallAverageLabel" text="4.5" styleClass="stat-value"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Proponowana ocena" styleClass="stat-label"/>
            <Label fx:id="finalGradeLabel" text="5" styleClass="stat-value"/>
        </VBox>
    </HBox>
    <!-- Tooltip dla ocen -->
    <fx:define>
        <Tooltip fx:id="gradeTooltip" styleClass="grade-tooltip"/>
    </fx:define>
</VBox>