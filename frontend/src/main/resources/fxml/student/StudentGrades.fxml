<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.egradebook.frontend.controller.student.StudentGradesController">
    <Button fx:id="returnButton" alignment="TOP_LEFT" defaultButton="true" onAction="#back" text="wróć" />
    <HBox alignment="CENTER" spacing="20">
        <Label styleClass="header" text="Twoje oceny" />
        <Label fx:id="studentNameLabel" styleClass="student-name" />
    </HBox>

    <TableView fx:id="gradesTable">
        <columns>
            <TableColumn fx:id="subjectColumn" text="Przedmiot" />
            <TableColumn fx:id="gradesColumn" editable="false" text="Oceny" />
        </columns>
    </TableView>

    <fx:define>
        <Tooltip fx:id="gradeTooltip" styleClass="grade-tooltip" />
    </fx:define>
</VBox>
