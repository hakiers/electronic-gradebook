<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.egradebook.frontend.controller.admin.AddLessonDialogController"
      spacing="10" alignment="CENTER" padding="20">
    <HBox spacing="10">
        <Label text="DzieÅ„:"/>
        <ComboBox fx:id="dayComboBox" prefWidth="150"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Nr lekcji:"/>
        <Spinner fx:id="lessonNumberSpinner" prefWidth="80"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Przedmiot:"/>
        <TextField fx:id="subjectField"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Nauczyciel:"/>
        <TextField fx:id="teacherField"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Sala:"/>
        <TextField fx:id="roomField"/>
    </HBox>
    <Label fx:id="statusLabel" textFill="red"/>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addButton" text="Dodaj" onAction="#addLesson"/>
        <Button fx:id="cancelButton" text="Anuluj" onAction="#cancel"/>
    </HBox>
</VBox>
